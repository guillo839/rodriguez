<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.digital.mpos"
    android:targetSandboxVersion="2">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="guillermo.proyectoa.mpos.RegisterActivity"></activity>
        <activity android:name="guillermo.proyectoa.mpos.productDetailActivity" />
        <activity android:name="guillermo.proyectoa.mpos.SelectProductActivity" />
        <activity android:name="guillermo.proyectoa.mpos.PaymentezActivity" />
        <activity android:name="guillermo.proyectoa.mpos.DetailActivity" />
        <activity android:name="guillermo.proyectoa.mpos.Activity_Transaction_Detail" />
        <activity android:name="guillermo.proyectoa.mpos.PayActivity" />
        <activity android:name="guillermo.proyectoa.mpos.AmountActivity" />
        <activity android:name="guillermo.proyectoa.mpos.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>