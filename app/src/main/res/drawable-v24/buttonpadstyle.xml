<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <stroke android:width="1dp" android:color="@color/buttonPadPressed"/>
            <solid android:color="@color/buttonPadPressed"/>
            <padding
                android:top="15dp"
                android:bottom="15dp"
                />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/buttonPadPressed"/>
            <solid android:color="@color/buttonPadPressed"/>
            <padding
                android:top="15dp"
                android:bottom="15dp"
                />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/buttonPadPressed"/>
            <solid android:color="@color/buttonPadIdle"/>
            <padding
                android:top="15dp"
                android:bottom="15dp"
                />
        </shape>
    </item>

</selector>